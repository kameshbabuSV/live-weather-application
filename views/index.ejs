<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
        <link rel="stylesheet" href="css/style.css">
          <title>Weather App</title>
    </head>
    <body>
<div class="container-fluid px-1 px-sm-3 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="row card0">
            <div class="card1 col-lg-8 col-md-7"> <small style="color: #fff;"></small>
                <div class="text-center"> <img class="image mt-5" src="https://i.imgur.com/M8VyA2h.png"> </div>
                <div class="row px-3 mt-3 mb-3">
                    <h1 style="color: #fff;" class="large-font mr-3"><%=temperature %>&#176;</h1>
                    <div class="d-flex flex-column mr-3">
                        <h2 style="color: #fff;" class="mt-3 mb-0"><%=cityname %></h2> <small style="color: #fff;"><%=today %></small>
                    </div>
                    <div class="d-flex flex-column text-center">
                        <img src="<%=image %>">
                    </div>
                </div>
            </div>
            <div class="card2 col-lg-4 col-md-5">
                <form method="post" action="/search">
                <div class="row px-3"> <input type="text" name="location" placeholder="Another location" class="mb-5" autocomplete="off">
                    <div class="text-center"><button type="submit">Search</button></div>
                </div>
                </form>
                <div class="mr-5">
                    <div class="line my-5"></div>
                    <p>Weather Details</p>
                    <div class="row px-3">
                        <p class="light-text">Description</p>
                        <p class="ml-auto"><%=desc %></p>
                    </div>
                    <div class="row px-3">
                        <p class="light-text">Feels Like</p>
                        <p class="ml-auto"><%=feels_like %></p>
                    </div>
                    <div class="row px-3">
                        <p class="light-text">Humidity</p>
                        <p class="ml-auto"><%=humid %></p>
                    </div>
                    <div class="row px-3">
                        <p class="light-text">Wind</p>
                        <p class="ml-auto"><%=wind_speed %></p>
                    </div>
                    <div class="row px-3">
                        <p class="light-text">Minimum Temperature</p>
                        <p class="ml-auto"><%=mini_temp %></p>
                    </div>
                    <div class="row px-3">
                        <p class="light-text">Maximum Temperature</p>
                        <p class="ml-auto"><%=maxi_temp %></p>
                    </div>
                    <div class="line mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>